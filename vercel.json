{
  "version": 2,
  "builds": [
    {
      "src": "frontend/package.json",
      "use": "@vercel/node",
      "config": { "includeFiles": ["frontend/**"] }
    },
    {
      "src": "api/index.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "api/index.js"
    },
    {
      "src": "/(.*\\.(?:html|css|js|json|png|jpg|jpeg|gif|svg|ico|txt|webp|woff|woff2|ttf|eot))$",
      "dest": "frontend/$1"
    },
    {
      "src": "/(.*)",
      "dest": "frontend/index.html"
    }
  ],
  "installCommand": "npm install --prefix frontend && npm install --prefix backend"
}